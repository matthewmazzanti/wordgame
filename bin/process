#!/usr/bin/env python3

from os import environ as env

ROOT = env["ROOT"]

def process(word):
    bitmap = 0
    for char in word:
        index = ord(char.lower()) - 97
        bitmap = bitmap | (1 << index)

    return bitmap

def main():
    with open(f"{ROOT}/words/raw.txt") as f:
        for line in f.readlines():
            # Strip newline
            word = line[:-1]
            if len(word) > 3:
                print("%s,%08x" % (word, process(word)))

if __name__ == "__main__":
    main()
